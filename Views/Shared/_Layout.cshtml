<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PizzaTime</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PizzaTime</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse flex-grow-0 collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="mx-1 btn btn-outline-dark" asp-area="" asp-controller="Home" asp-action="Home">HOME</a>
                        </li>
                        @if (ViewBag.ActiveUser != null) {
                            <li class="nav-item">
                                <a class="mx-1 btn btn-outline-dark" asp-area="" asp-controller="Home" asp-action="ActiveOrders">ORDER(@ViewBag.OrdersNum)</a>
                            </li>
                            <li class="nav-item">
                                <a class="mx-1 btn btn-outline-dark" asp-area="" asp-controller="User" asp-action="Edit">ACCOUNT</a>
                            </li>
                            <li class="nav-item">
                                <a class="mx-1 btn btn-outline-dark" asp-area="" asp-controller="Home" asp-action="Contact">CONTACT US</a>
                            </li>
                        }
                        <li class="nav-item">
                            @if (@ViewBag.ActiveUser != null) {
                                <a class="mx-1 btn btn-outline-danger" asp-controller="User" asp-action="LogOut">@ViewBag.ActiveUser.FirstName @ViewBag.ActiveUser.LastName - Logout</a>
                            } else {
                                <a class="mx-1 btn btn-outline-success" href="./login">Login</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-er" style="width:100%;">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Restaurant
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
